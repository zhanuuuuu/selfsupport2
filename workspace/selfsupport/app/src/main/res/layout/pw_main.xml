<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginRight="25dp"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:layout_height="match_parent">

    <!--最外层-->
    <RelativeLayout
        android:background="@drawable/vip_rectangle_with_corners"
        android:layout_width="match_parent"
        android:layout_height="700dp">

        <ImageView
            android:id="@+id/btn_main_x"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/x"
            android:layout_alignParentRight="true"
            >
        </ImageView>

        <TextView
            android:id="@+id/vip_login_title"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:text="商品条码"
            android:gravity="center"
            android:textColor="#3a3e3f"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>

        <LinearLayout
            android:layout_below="@+id/vip_login_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/input_barcode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="13628672210"
                android:maxLines="1"
                android:gravity="center"
                android:singleLine="true"
                android:textScaleX="1.2"
                android:background="@null"
                android:textColor="#3a3e3f"
                android:textSize="28dp"
                android:textCursorDrawable="@drawable/my_cursor"
                />

            <TextView
                android:id="@+id/vip_bg_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:background="@drawable/bg_line_solid"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="请输入商品条码"
                android:textColor="#9FA7A7"
                android:textSize="10dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_main_1"
                    style="@style/pwbtn"
                    android:text="1"
                    android:layout_marginRight="5dp"
                    >
                </Button>
                <Button
                    android:id="@+id/btn_main_2"
                    style="@style/pwbtn"
                    android:text="2"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginRight="2.5dp"
                    >
                </Button>
                <Button
                    android:id="@+id/btn_main_3"
                    style="@style/pwbtn"
                    android:text="3"
                    android:layout_marginLeft="5dp"
                    >
                </Button>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_main_4"
                    style="@style/pwbtn"
                    android:gravity="center"
                    android:text="4"></Button>

                <Button
                    android:id="@+id/btn_main_5"
                    style="@style/pwbtn"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginRight="2.5dp"

                    android:text="5"></Button>

                <Button
                    android:id="@+id/btn_main_6"
                    style="@style/pwbtn"
                    android:layout_marginLeft="5dp"

                    android:text="6"></Button>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_main_7"
                    style="@style/pwbtn"
                    android:layout_marginRight="5dp"
                    android:text="7"></Button>

                <Button
                    android:id="@+id/btn_main_8"
                    style="@style/pwbtn"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginRight="2.5dp"
                    android:text="8"></Button>

                <Button
                    android:id="@+id/btn_main_9"
                    style="@style/pwbtn"
                    android:layout_marginLeft="5dp"

                    android:text="9"></Button>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_main_vip_clear"
                    android:layout_marginRight="5dp"
                    style="@style/pwbtn"
                    android:text="清空"></Button>

                <Button
                    android:id="@+id/btn_main_0"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginRight="2.5dp"
                    style="@style/pwbtn"
                    android:text="0"></Button>

                <Button
                    android:id="@+id/btn_main_vip_x"
                    style="@style/pwbtn"
                    android:layout_marginLeft="5dp"
                    android:text="X"></Button>

            </LinearLayout>

            <Button
                android:id="@+id/btn_main_vip_sure"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:textColor="#DDFFFFFF"
                android:background="@drawable/btn_vip_sure"
                style="@style/Widget.AppCompat.Button"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:text="确定"/>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>