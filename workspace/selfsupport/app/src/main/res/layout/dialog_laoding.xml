<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_laoding"
    android:layout_width="300dp"
    android:layout_height="300dp">

    <!--
android:background="@drawable/bg_rectangle_with_stroke_laoding_dialog"
    -->
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:indeterminate="false"
                android:indeterminateDrawable="@drawable/bg_ring_with_gradient_rotate" />

            <TextView
                android:id="@+id/dialog_laoding_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:gravity="center"
                android:textColor="#352828"
                android:textSize="20dp"
                android:text="加载中....."
                >
            </TextView>
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
